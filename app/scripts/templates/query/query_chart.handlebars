<label for="chart">Type of chart
  {{#if error}}<br /><span class="is-error">{{error}}</span>{{/if}}
  <select name="chart" id="chart">
    {{#each options}}
    <option value="{{{value}}}" {{#ifCond ../value value }}
    selected="selected"{{/ifCond}}>{{{name}}}</option>
    {{/each}}
  </select>
</label>
