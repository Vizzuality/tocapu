<div class="row">
  <div class="grid-lg-12">
    {{#if username}}
      <h2>{{username}} <span class="btn-inline" id="changeUsername">change</span></h2>
    {{else}}
      <h2>Introduce your CartoDB account</h2>
      <p>To start, lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>

      {{#if error}}
        <p>Please be sure the username is correct.</p>
      {{/if}}
      <form autocomplete="off">
        <div class="row">
          <div class="grid-lg-12">
            <label for="username">Username
              <input type="text" name="username" placeholder="username" id="username" required {{#if error}}class="is-wrong"{{/if}}>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="grid-lg-12">
            <button class="button small" type="submit">Start</button>
          </div>
        </div>
      </form>
    {{/if}}

  </div>
</div>
