label
  font-weight 600
  display block
  margin-bottom $margin-small

input[type="text"],
input[type="number"],
input[type="password"],
input[type="search"],
input[type="tel"],
input[type="email"],
input[type="url"],
select,
textarea
  border 1px solid $border-color-1
  border-radius rem(4px)
  box-shadow none
  box-sizing border-box
  display block
  font-family $font-family
  font-size 1rem
  font-weight 600
  padding rem(6px) rem(12px)
  width 100%
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  -o-appearance none
  appearance none
  transition border-color .3s ease

  &:focus
    border-color $border-color-2
    outline 0
    outline-offset 0

  .l-dashboard &
    color $text-color-1

input[type="email"],
input[type="number"],
input[type="search"],
input[type="text"],
input[type="tel"],
input[type="url"],
input[type="password"],
select
  height rem(34px)
