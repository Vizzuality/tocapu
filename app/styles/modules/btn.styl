.btn,
button,
input[type="submit"],
input[type="reset"],
input[type="button"]
  display inline-block
  background $bg-color-2
  border 1px solid $border-color-2
  box-sizing border-box
  color $text-color-3
  height rem(34px)
  cursor pointer
  font-size 0.8rem
  font-weight 600
  line-height rem(34px)
  padding 0 rem(30px)
  text-decoration none
  text-transform uppercase
  white-space nowrap
  transition all .3s ease

  &:hover
    background-color darken($bg-color-2, 10)

  &[disabled]
    opacity .7
    &:hover
      background-color $bg-color-2

.btn-inline
  display inline-block
  padding rem(3px) rem(6px)
  background $bg-color-2
  font-size .8rem
  color $text-color-3
  text-transform none
  cursor pointer
