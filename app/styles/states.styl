.is-clearfix
  clearfix()

.is-code
  font-family Monaco, Menlo, monospace

.is-wrong
  border-color $border-color-3

.is-loading:after
  content ''
  position absolute
  width rem(40px)
  height rem(40px)
  top 50%
  margin-top rem(-20px)
  left 50%
  margin-left rem(-20px)
  border-radius 50%
  border-top 4px solid $border-color-2
  border-bottom 4px solid $border-color-1
  border-left 4px solid $border-color-1
  border-right 4px solid $border-color-1
  animation circle-motion 1s linear infinite

@keyframes circle-motion
  from
    transform rotate(0deg)
  to
    transform rotate(359deg)

