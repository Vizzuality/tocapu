html
  font-size 16px

body
  background $bg-color-1
  color $text-color-1
  font-family $font-family
  font-size 1em
  line-height 1.2
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing: grayscale;

h1
  font-size 1.5em

h2
  font-size 1.25em

h3
  font-size 1.1em

h4
  font-size 1.05em

a
  text-decoration none
  color $text-color-4

  &:hover
    text-decoration underline

nav ul
  margin 0
  padding 0
  list-style none

table
  width 100%

  thead tr, thead tr:nth-child(odd)
    background-color $bg-color-1

  tr:nth-child(odd)
    background-color #eee

  td, th
    padding rem($margin-small)
