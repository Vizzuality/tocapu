.row
  margin-bottom 0
  margin-top 0
  padding 0 $grid-gutter
  width 100%
  clearfix()

  .row
    margin-left $grid-gutter * -1
    margin-right $grid-gutter * -1
    width auto

$grid
  box-sizing border-box
  display block
  float left
  padding 0 $grid-gutter
  position relative

@media screen and (min-width $sm-screen)
  for col in 1..$grid-columns
    .grid-sm-{col}
      @extends $grid
      calculewidth(col)

@media screen and (min-width $md-screen)
  for col in 1..$grid-columns
    .grid-md-{col}
      @extends $grid
      calculewidth(col)

@media screen and (min-width $lg-screen)
  for col in 1..$grid-columns
    .grid-lg-{col}
      @extends $grid
      calculewidth(col)
