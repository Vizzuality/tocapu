.l-content
  display flex
  align-items stretch
  position fixed
  top 0
  left 0
  width 100%
  height 100%

  background url('../images/blur.jpg') no-repeat
  background-size cover

.l-dashboard
  display flex
  flex-direction column
  color $text-color-3
  width rem(380px)
  background-color rgba($bg-color-3, .85)

.l-chart
  flex 1
  background-color rgba($white, .8)

.l-header
  background-color rgba(darken($bg-color-3, 20), .7)
  padding rem($margin-small) 0
  clearfix()

  h1
    color $text-color-3
    font-size 1.5rem
    margin 0

  a
    color $text-color-3

    &:hover
      text-decoration none

.l-panels
  overflow-x hidden
  overflow-y auto
  -webkit-overflow-scrolling touch
